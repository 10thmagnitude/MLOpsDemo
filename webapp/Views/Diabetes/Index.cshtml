@model DiabetesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <form asp-controller="Diabetes" asp-action="Predict" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="NumPregnancies" ></label>
                <input asp-for="NumPregnancies" class="form-control"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Glucose"></label>
                <input asp-for="Glucose" class="form-control"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Diastolic"></label>
                <input asp-for="Diastolic" class="form-control"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Thickness"></label>
                <input asp-for="Thickness" class="form-control"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Insulin"></label>
                <input asp-for="Insulin" class="form-control"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="BMI"></label>
                <input asp-for="BMI" class="form-control"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Pedigree"></label>
                <input asp-for="Pedigree" class="form-control"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Predict</button>
    </form>
</div>
